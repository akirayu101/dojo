
<script type="text/javascript">
'use strict';
$(() => {

  const $index = $("input[name='index']");

  cd.updateIndex = (value) => {
    // Each event has an incrementing index,
    // as held in the back end commits.
    $index.val(value);
  };

  cd.getIndex = () => {
    return $index.val();
  };

});
</script>

<input name="index"        type="hidden" value="<%= @index %>">
<input name="predicted"    type="hidden" value="none">

