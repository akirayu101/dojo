<script type="text/javascript">
'use strict';
$(() => {

  const $button = $('#info-button');
  const $buttons = $('.info-button');
  cd.createTip($button, 'toggle info buttons on/off');
  $buttons.hide();
  $button.clickToggle(() => $buttons.fadeIn(), () => $buttons.fadeOut());

});
</script>
